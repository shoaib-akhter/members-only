<h1>New Post</h1>

<%= form_with(model: @post, url: posts_path, local: true) do |form| %>
  <div>
    <%= form.label :content, "Your Secret Post" %><br>
    <%= form.text_area :content, rows: 5 %>
  </div>

  <div>
    <%= form.submit "Create Post" %>
  </div>
<% end %>

<%= link_to "Back to Posts", posts_path %>
